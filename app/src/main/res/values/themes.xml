<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anidex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepOrange001</item>
        <item name="colorPrimaryVariant">@color/deepOrange002</item>
        <item name="colorOnPrimary">@color/materialWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueGray001</item>
        <item name="colorSecondaryVariant">@color/blueGray002</item>
        <item name="colorOnSecondary">@color/materialBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Anidex.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Anidex.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Anidex.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>